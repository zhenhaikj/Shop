<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/tool_bar"/>
    <com.lwkandroid.stateframelayout.StateFrameLayout
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:enableContentAnim="true"
        app:emptyLayoutResId="@layout/layout_empty_car"
        app:netErrorLayoutResId="@layout/layout_net_error"
        app:loadingLayoutResId="@layout/layout_loading">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#f4f4f4">

                        <ListView
                            android:id="@+id/listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@color/white"
                            android:divider="#c4c4c4"
                            android:dividerHeight="0.5dp"
                            android:scrollbars="none" />
                    </LinearLayout>
                    <ListView
                        android:id="@+id/lv_content"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                   <!-- <GridView
                        android:id="@+id/gv_content"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_weight="3"
                        android:numColumns="3"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="10dp"/>-->
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="已选0类"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="#333333"/>
                    <TextView
                        android:id="@+id/ok"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="选好了"
                        android:gravity="center"
                        android:background="#48C251"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/up_soup"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="51dp"
                android:visibility="gone"
                android:src="@drawable/up_soup"/>
        </FrameLayout>

    </com.lwkandroid.stateframelayout.StateFrameLayout>
</LinearLayout>