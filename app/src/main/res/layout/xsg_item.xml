<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <com.emjiayuan.app.widget.MyImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:background="#F4F4F4"
            android:src="@drawable/img1"/>
        <LinearLayout
            android:id="@+id/bg_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
             android:background="@color/black"
            android:orientation="vertical">
            <com.emjiayuan.app.widget.RatioImageView
                android:id="@+id/sold_out"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sold_out_2"
                app:ratio="1.675"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seckill_ll"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/second_kill_bar"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="即将开抢"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="仅售10件"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="7sp" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="伊穆家园"
            android:textSize="13dp"
            android:visibility="gone"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="拉面汤料"
            android:lines="2"
            android:textSize="@dimen/name_size"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="¥78"
            android:gravity="bottom"
            android:textSize="@dimen/price_size"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/old"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="bottom"
            android:text="¥98"
            android:textSize="@dimen/old_price_size"
            android:textColor="@color/grey"/>
    </LinearLayout>

</LinearLayout>